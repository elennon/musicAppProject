<Page
    x:Class="MyMusic.Views.ShowAllTracks"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyMusic.Views"
    xmlns:q="using:QKit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>

        <DataTemplate x:Key="ListViewItemTemplate">
            
                <Grid Width="400" Margin="0,0,0,-20" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition  />
                    </Grid.ColumnDefinitions>

                    <Image Source="{Binding ImageUri}" Width="76" Height="120" Grid.RowSpan="2"
                       x:Name="imgSongPic"
                       Stretch="Uniform" 
                       VerticalAlignment="Top"/>
                    <Border x:ConnectionId='1'  Margin="6,0,0,0"                       Grid.Column="1"  >
                        <TextBlock x:Name="txtName"                              
                            Text="{Binding Name}"   
                            Tag="{Binding OrderNo}"
                            Style="{StaticResource ListViewItemTextBlockStyle}" 
                            VerticalAlignment="Top"                             
                            HorizontalAlignment="Left"/>
                    </Border>
                    <Grid Grid.Column="1" Grid.Row="1"  >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Artist}"                                    
                                x:Name="txtArtist" 
                                Margin="6,-5,0,0" 
                                Style="{StaticResource ListViewItemSubheaderTextBlockStyle}" 
                                VerticalAlignment="Top" 
                                />

                        <Image x:ConnectionId='2' Source="/Assets/bin.png"
                                Name="deleteIcon"
                                                          
                                Tag="{Binding Name}" 
                                Visibility="Collapsed"
                                Grid.Column="1"
                                Margin="0,-10,55,0"
                                Width="35" Height="35"
                                Stretch="Uniform" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"/>
                    </Grid>
                </Grid>
            
        </DataTemplate>

        <DataTemplate x:Key="GroupHeaderTemplate">
            <Border Background="Transparent" Padding="5">
                <Border Background="SlateGray" 
                        BorderBrush="Black" BorderThickness="2"	
                        Width="70" Height="62" Margin="6,0,0,12"  				 
                        HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding Title}" 
                        Foreground="{StaticResource PhoneForegroundBrush}" 
                        FontSize="42"
                        Padding="6"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"/>
                </Border>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="GroupsTemplate">           
            <Border Padding="5">
                <Border VerticalAlignment="Center" HorizontalAlignment="Center" Height="62" Width="70" Background="SlateGray" Margin="8,8,8,18">
                    <TextBlock Text="{Binding Group.Title}"                        
                        FontSize="48"
                        Padding="6"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"/>
                </Border>
            </Border>
        </DataTemplate>
        
    </Page.Resources>
    <Grid x:Name="LayoutRoot"  >

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,17,0,28">
            <StackPanel Orientation="Horizontal" Margin="10,10,0,18" >
                <Image Width="50" Height="50" Name="imgNote"  Source="/Assets/Picture1.png" Stretch="Fill"></Image>
                <TextBlock Text="MY MUSIC" Style="{StaticResource BaseTextBlockStyle}" Margin="12,0"/>
            </StackPanel>
        </StackPanel>
        
        
        <Grid Grid.Row="1" x:Name="ContentRoot" Margin="19,9.5,19,0">

            <SemanticZoom x:Name="semanticZoom" ScrollViewer.HorizontalScrollMode="Disabled" Grid.Row="1"
                                          HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <SemanticZoom.ZoomedInView>
                    <ListView x:ConnectionId='4' Name="lstViewDetail"  
                                HorizontalContentAlignment="Stretch" 
                                IsSwipeEnabled="False"
                                ScrollViewer.HorizontalScrollMode="Disabled" 
                                ScrollViewer.IsHorizontalScrollChainingEnabled="True"
                                ScrollViewer.IsVerticalScrollChainingEnabled="True"
                                ScrollViewer.IsVerticalRailEnabled="True"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"                                                               
                                ItemsSource="{Binding}"             
                                ItemTemplate="{StaticResource ListViewItemTemplate}" 
                                IsItemClickEnabled="True"
                                SelectionMode="None"
                                                                                                
                                >
                        <ListView.GroupStyle>
                            <GroupStyle HidesIfEmpty="True" HeaderTemplate="{StaticResource GroupHeaderTemplate}" />                                                                                         
                        </ListView.GroupStyle>
                    </ListView>
                </SemanticZoom.ZoomedInView>
                <SemanticZoom.ZoomedOutView>
                    <GridView x:Name="lstViewSummary" 
                              IsSwipeEnabled="False"                                 
                              SelectionMode="None"           
                              HorizontalAlignment="Stretch" 
                              ItemTemplate="{StaticResource GroupsTemplate}" 
                              HorizontalContentAlignment="Stretch"
                              ItemsSource="{Binding}"
                              />
                </SemanticZoom.ZoomedOutView>
            </SemanticZoom>

            <ListBox x:ConnectionId='3'   Name="lstTracksInAlbum" ItemsSource="{Binding}" Foreground="AliceBlue" Background="Black" FontSize="25" Visibility="Collapsed"
                                                                             DisplayMemberPath="Name"  ></ListBox>
        </Grid>
       
    </Grid>
    <Page.BottomAppBar>
        <CommandBar IsSticky="True" x:Name="appBar">
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='5'  Icon="Shuffle" Label="Shuffle"                             />
                <AppBarButton x:ConnectionId='6' Icon="Edit"                           Label="Edit"/>
                <AppBarButton x:ConnectionId='7' Icon="AllApps"                                 Label="Show All"/>
            </CommandBar.PrimaryCommands>
            <CommandBar.SecondaryCommands>
                <AppBarButton x:ConnectionId='8' Label="Show binned" Icon="Delete"                                 />                
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>

