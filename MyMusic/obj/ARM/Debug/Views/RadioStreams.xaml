<Page
    x:Class="MyMusic.Views.RadioStreams"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyMusic.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="LayoutRoot">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,17,0,28">
            <StackPanel Orientation="Horizontal" Margin="10,10,0,18" >
                <Image Width="50" Height="50" Name="imgNote"  Source="/Assets/Picture1.png" Stretch="Fill"></Image>
                <TextBlock Text="MY MUSIC" Style="{StaticResource BaseTextBlockStyle}" Margin="12,0"/>
            </StackPanel>
        </StackPanel>

        <!--TODO: Content should be placed within the following grid-->
        <Grid Grid.Row="1" x:Name="ContentRoot" Margin="19,9.5,19,0">
            <ListBox x:ConnectionId='1' Name="lstGenre" ItemsSource="{Binding}" DisplayMemberPath="RadioGenreName" 
                     SelectedValuePath="RadioGenreKey" RequestedTheme="Dark" Foreground="AliceBlue" 
                     Background="Black"                                              
                     FontSize="{StaticResource TextStyleExtraExtraLargeFontSize}"  >
                
            </ListBox>
            
            <!--<ListBox Name="lstGenre" ItemsSource="{Binding}" DisplayMemberPath="RadioGenre" 
                     SelectedValuePath="RadioGenre" RequestedTheme="Dark" Foreground="AliceBlue" 
                     Background="Black" SelectionChanged="lstGenre_SelectionChanged" 
                     FontSize="{StaticResource TextStyleExtraExtraLargeFontSize}"  >

            </ListBox>-->

        </Grid>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar IsSticky="True" x:Name="appBar">
            <CommandBar.PrimaryCommands>
                
                <AppBarToggleButton Label="Shoutcast stations" ></AppBarToggleButton>
               <!-- <AppBarButton Icon="Next"  Label="Next"/>-->
            </CommandBar.PrimaryCommands>
            <!--<CommandBar.SecondaryCommands>
                <AppBarButton Label="Test01"/>
                <AppBarButton Label="Test02"/>
            </CommandBar.SecondaryCommands>-->
        </CommandBar>
    </Page.BottomAppBar>
</Page>

