<Page
    x:Class="MyMusic.Views.Collection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyMusic.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vs="using:MyMusic.UserControls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <DataTemplate x:Key="HubSectionHeaderTemplate">
            <TextBlock Margin="0,0,0,-9.5" FontSize="34" Text="{Binding}"/>
        </DataTemplate>

        <DataTemplate x:Key="AllTracksTemplate">

            <Grid Width="400" Margin="0,0,0,-20" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition  />
                </Grid.ColumnDefinitions>

                <Image Source="{Binding ImageUri}" Width="76" Height="120" Grid.RowSpan="2"
                           x:Name="imgSongPic"
                           Stretch="Uniform" 
                           VerticalAlignment="Top"/>
                <Border  Margin="6,0,0,0"  Grid.Column="1"  >
                    <TextBlock x:Name="txtName"                              
                                Text="{Binding Name}"   
                                Tag="{Binding OrderNo}"
                                Style="{StaticResource ListViewItemTextBlockStyle}" 
                                VerticalAlignment="Top"                             
                                HorizontalAlignment="Left"/>
                </Border>
                <Grid Grid.Column="1" Grid.Row="1"  >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding Artist}"                                    
                                    x:Name="txtArtist" 
                                    Margin="6,-5,0,0" 
                                    Style="{StaticResource ListViewItemSubheaderTextBlockStyle}" 
                                    VerticalAlignment="Top" 
                                    />

                    <Image x:ConnectionId='5' Source="/Assets/bin.png"
                                    Name="deleteIcon"
                                                              
                                    Tag="{Binding Name}" 
                                    Visibility="Collapsed"
                                    Grid.Column="1"
                                    Margin="0,-10,55,0"
                                    Width="35" Height="35"
                                    Stretch="Uniform" 
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"/>
                </Grid>
            </Grid>

        </DataTemplate>

        <DataTemplate x:Key="TopPlayTemplate">
            <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
                <Image Source="{Binding ImageUri}" Grid.Row="0" Width="82" Height="82"
                           VerticalAlignment="Top" 
                           HorizontalAlignment="Left"
                           x:Name="imgSongPic"
                           Grid.Column="0" 
                           Stretch="Uniform" 
                           />
                <StackPanel Margin="12,0,0,0" VerticalAlignment="Top">
                    <TextBlock Text="{Binding Name}" 
                            x:Name="txtName" 
                            Style="{StaticResource ListViewItemTextBlockStyle}" 
                            VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBlock Text="{Binding Artist}" 
                            x:Name="txtArtist" 
                            Style="{StaticResource ListViewItemSubheaderTextBlockStyle}" 
                            VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBlock Text="{Binding}" 
                            x:Name="txtPlayCount" 
                            Style="{StaticResource ListViewItemSubheaderTextBlockStyle}" 
                            VerticalAlignment="Top" HorizontalAlignment="Left"/>
                </StackPanel>
            </StackPanel>

        </DataTemplate>

        <DataTemplate x:Key="ArtistListViewTemplate">
            <StackPanel Orientation="Horizontal" >
                <StackPanel Orientation="Horizontal">
                    <Image x:ConnectionId='4' x:Name="imgPlayArtist"
                                Margin="2"
                                VerticalAlignment="Center"                               
                                                           
                                Width="50"
                                Height="50"                                     
                                />
                </StackPanel>
                <StackPanel >
                    <Border x:ConnectionId='3'                               >
                        <TextBlock  x:Name="txtArtistName"
                                Margin="10,15,0,0"
                                TextWrapping="Wrap"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left"  
                                FontSize="25"
                                Text="{Binding Name}"                                     
                                />
                    </Border>
                </StackPanel>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="AlbumListViewItemTemplate">
            <StackPanel Orientation="Horizontal" >
                <StackPanel Orientation="Horizontal">
                    <Image x:ConnectionId='2' x:Name="imgPlayAlbum"
                            Margin="2"
                            VerticalAlignment="Center"                               
                                                      
                            Width="62"
                            Height="62" 
                            Tag="{Binding AlbumId}"
                            />
                </StackPanel>

                <StackPanel >
                    <Border x:ConnectionId='1'                       >
                        <TextBlock  x:Name="txtAlbumName"
                            Margin="10,0,0,0"
                            TextWrapping="Wrap"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"  
                            FontSize="25"
                            Tag="{Binding AlbumId}"
                            Text="{Binding Name}"                                    
                            />
                    </Border>
                </StackPanel>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="GenreTemplate">
            <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
                <Image Source="/Assets/music2.jpg" Grid.Row="0" Width="82" Height="82"
                           VerticalAlignment="Top" 
                           HorizontalAlignment="Left"
                           x:Name="imgSongPic"
                           Grid.Column="0" 
                           Stretch="Uniform" 
                           />

                <StackPanel Margin="12,0,0,0" VerticalAlignment="Top">
                    <TextBlock Text="{Binding Name}" 
                            x:Name="txtName" 
                            Style="{StaticResource ListViewItemTextBlockStyle}" 
                            VerticalAlignment="Top" HorizontalAlignment="Left"/>

                    <TextBlock Text="{Binding TrackCount}" 
                            x:Name="txtPlayCount" 
                            Style="{StaticResource ListViewItemSubheaderTextBlockStyle}" 
                            VerticalAlignment="Top" HorizontalAlignment="Left"/>
                </StackPanel>
            </StackPanel>

        </DataTemplate>

        <DataTemplate x:Key="GroupHeaderTemplate">
            <Border Background="Transparent" Padding="5">
                <Border Background="SlateGray" 
                            BorderBrush="Black" BorderThickness="2"	
                            Width="70" Height="62" Margin="6,0,0,12"  				 
                            HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding Title}" 
                            Foreground="{StaticResource PhoneForegroundBrush}" 
                            FontSize="42"
                            Padding="6"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"/>
                </Border>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="GroupsTemplate">
            <Border Padding="5">
                <Border VerticalAlignment="Center" HorizontalAlignment="Center" Height="62" Width="70" Background="SlateGray" Margin="8,8,8,18">
                    <TextBlock Text="{Binding Group.Title}"                        
                        FontSize="48"
                        Padding="6"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"/>
                </Border>
            </Border>
        </DataTemplate>

    </Page.Resources>


    <Grid x:Name="LayoutRoot" >

        <Hub x:ConnectionId='6' x:Name="CollectionHub" x:Uid="cHub" Header="Music central"                                                              >
            <Hub.Background>
                <ImageBrush x:Name="bkImage" Stretch="UniformToFill" Opacity="0.3" ImageSource="/Assets/concert2.jpg"></ImageBrush>
            </Hub.Background>

            <HubSection x:Uid="_allTracks" Name="AllTracksSection" Header="All Tracks" Width="Auto"
                         DataContext="{Binding }" HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}">
                <DataTemplate>                    
                    <SemanticZoom x:ConnectionId='12' x:Name="semanticZoom" ScrollViewer.HorizontalScrollMode="Disabled" DataContext="{Binding}"
                                                                       
                                          HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                        <SemanticZoom.ZoomedInView>
                            <ListView x:ConnectionId='13' Name="lstViewDetail"   
                                HorizontalContentAlignment="Stretch" 
                                IsSwipeEnabled="False"
                                ScrollViewer.HorizontalScrollMode="Disabled" 
                                ScrollViewer.IsHorizontalScrollChainingEnabled="True"
                                ScrollViewer.IsVerticalScrollChainingEnabled="True"
                                ScrollViewer.IsVerticalRailEnabled="True"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"                                                               
                                ItemsSource="{Binding Tracks }"             
                                ItemTemplate="{StaticResource AllTracksTemplate}" 
                                IsItemClickEnabled="True"
                                SelectionMode="None"
                                                                                                
                                                                   
                                >
                                <ListView.GroupStyle>
                                    <GroupStyle HidesIfEmpty="True" HeaderTemplate="{StaticResource GroupHeaderTemplate}" />
                                </ListView.GroupStyle>
                            </ListView>
                        </SemanticZoom.ZoomedInView>
                        <SemanticZoom.ZoomedOutView>
                            <GridView x:Name="lstViewSummary" 
                              IsSwipeEnabled="False"                                 
                              SelectionMode="None"           
                              HorizontalAlignment="Stretch" 
                              ItemTemplate="{StaticResource GroupsTemplate}" 
                              HorizontalContentAlignment="Stretch"
                              ItemsSource="{Binding}"
                              />
                        </SemanticZoom.ZoomedOutView>
                    </SemanticZoom>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="TopPlaySection" Header="Top Played"
                        DataContext="{Binding }" HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}">
                <DataTemplate>
                    <ListView Name="lstViewDetail"  
                                HorizontalContentAlignment="Stretch" 
                                IsSwipeEnabled="False"
                                ScrollViewer.HorizontalScrollMode="Disabled" 
                                ScrollViewer.IsHorizontalScrollChainingEnabled="True"
                                ScrollViewer.IsVerticalScrollChainingEnabled="True"
                                ScrollViewer.IsVerticalRailEnabled="True"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"                                                               
                                ItemsSource="{Binding}"             
                                ItemTemplate="{StaticResource TopPlayTemplate}" 
                                IsItemClickEnabled="True"
                                SelectionMode="None"                                
                                >
                    </ListView>
                </DataTemplate>
            </HubSection>

            <HubSection Name="ArtistSection" x:Uid="ArtistSection" 
                        Header="Artists" DataContext="{Binding}" 
                        HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}">
                <DataTemplate>

                    <SemanticZoom x:ConnectionId='10' x:Name="ArtistSemanticZoom" ScrollViewer.HorizontalScrollMode="Disabled" 
                                                              
                                        HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                        <SemanticZoom.ZoomedInView>
                            <ListView x:ConnectionId='11' Name="ArtlstViewDetail"  
                                    HorizontalContentAlignment="Stretch" 
                                    IsSwipeEnabled="False"
                                    ScrollViewer.HorizontalScrollMode="Disabled" 
                                    ScrollViewer.IsHorizontalScrollChainingEnabled="True"
                                    ScrollViewer.IsVerticalScrollChainingEnabled="True"
                                    ScrollViewer.IsVerticalRailEnabled="True"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"                                                               
                                ItemsSource="{Binding}"             
                                ItemTemplate="{StaticResource ArtistListViewTemplate}" 
                                IsItemClickEnabled="True"
                                SelectionMode="None"
                                                                                                  
                                  >
                                <ListView.GroupStyle>
                                    <GroupStyle  HidesIfEmpty="True" HeaderTemplate="{StaticResource GroupHeaderTemplate}"                                           
                                            />
                                </ListView.GroupStyle>
                            </ListView>
                        </SemanticZoom.ZoomedInView>
                        <SemanticZoom.ZoomedOutView>
                            <GridView x:Name="ArtGrdViewSummary" 
                              IsSwipeEnabled="False"                                 
                              SelectionMode="None"           
                              HorizontalAlignment="Stretch" 
                              ItemTemplate="{StaticResource GroupsTemplate}" 
                              HorizontalContentAlignment="Stretch"
                              ItemsSource="{Binding}"
                                          />
                        </SemanticZoom.ZoomedOutView>
                    </SemanticZoom>

                </DataTemplate>
            </HubSection>

            <HubSection x:Name="AlbumSection" Header="Albums"
                        DataContext="{Binding }" HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}">
                <DataTemplate>
                    <SemanticZoom x:ConnectionId='8' x:Name="semanticZoom" ScrollViewer.HorizontalScrollMode="Disabled" 
                                                                   
                                          HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                        <SemanticZoom.ZoomedInView>
                            <ListView x:ConnectionId='9' Name="albumLstViewDetail"  
                                    HorizontalContentAlignment="Stretch" 
                                    IsSwipeEnabled="False"
                                    ScrollViewer.HorizontalScrollMode="Disabled" 
                                    ScrollViewer.IsHorizontalScrollChainingEnabled="True"
                                    ScrollViewer.IsVerticalScrollChainingEnabled="True"
                                    ScrollViewer.IsVerticalRailEnabled="True"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"                                                               
                                ItemsSource="{Binding}"             
                                ItemTemplate="{StaticResource AlbumListViewItemTemplate}" 
                                IsItemClickEnabled="True"
                                SelectionMode="None"
                                                                                                 
                                  >
                                <ListView.GroupStyle>
                                    <GroupStyle HidesIfEmpty="True" HeaderTemplate="{StaticResource GroupHeaderTemplate}"                                                
                                            />
                                </ListView.GroupStyle>
                            </ListView>
                        </SemanticZoom.ZoomedInView>
                        <SemanticZoom.ZoomedOutView>
                            <GridView x:Name="albumGrdViewSummary" 
                              IsSwipeEnabled="False"                                 
                              SelectionMode="None"           
                              HorizontalAlignment="Stretch" 
                              ItemTemplate="{StaticResource GroupsTemplate}" 
                              HorizontalContentAlignment="Stretch"
                              ItemsSource="{Binding}"
                                          />
                        </SemanticZoom.ZoomedOutView>
                    </SemanticZoom>
                   
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="GenreSection" Header="Genres"
                        DataContext="{Binding }" HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}">
                <DataTemplate>
                    <ListView x:ConnectionId='7' Name="lstViewDetail"  
                                HorizontalContentAlignment="Stretch" 
                                IsSwipeEnabled="False"
                                ScrollViewer.HorizontalScrollMode="Disabled" 
                                ScrollViewer.IsHorizontalScrollChainingEnabled="True"
                                ScrollViewer.IsVerticalScrollChainingEnabled="True"
                                ScrollViewer.IsVerticalRailEnabled="True"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"                                                               
                                ItemsSource="{Binding}"             
                                ItemTemplate="{StaticResource GenreTemplate}" 
                                IsItemClickEnabled="True"
                                SelectionMode="None"
                                                           
                                >
                    </ListView>
                </DataTemplate>
            </HubSection>

        </Hub>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar IsSticky="True" x:Name="appBar">
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='14' Name="appBarShuffle" Icon="Shuffle" Label="Shuffle"                             />
                <AppBarButton x:ConnectionId='15' Name="appBarEdit" Icon="Edit"                           Label="Edit"/>
                <AppBarButton x:ConnectionId='16' Name="appBarShowAll" Icon="AllApps"                                 Label="Show All"/>
            </CommandBar.PrimaryCommands>
            <CommandBar.SecondaryCommands>
                <AppBarButton x:ConnectionId='17' Name="appBarShowBinned" Label="Show binned" Icon="Delete"                                 />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>

