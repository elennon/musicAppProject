<Page
    x:Class="MyMusic.Views.BlankPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyMusic.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <StackPanel Grid.Row="0" Margin="19,0,0,0">
            <StackPanel Orientation="Horizontal" Margin="10,10,0,18" >
                <Image Width="50" Height="50" Name="imgNote"  Source="/Assets/Picture1.png" Stretch="Fill"></Image>
                <TextBlock Text="MY MUSIC" Style="{StaticResource BaseTextBlockStyle}" Margin="12,0"/>
            </StackPanel>
        </StackPanel>


        <Grid Grid.Row="1" x:Name="ContentRoot" Margin="19,9.5,19,0">
            <SemanticZoom x:Name="semanticZoom" IsZoomOutButtonEnabled="True" CanChangeViews="True">

                <SemanticZoom.ZoomedInView>

                    <ListView x:ConnectionId='1' x:Name="lstViewDetail" IsSwipeEnabled="True" IsTapEnabled="True" SelectedValuePath="OrderNo"                                
                                                           
                              SelectionMode="Single" 
                              IsZoomedInView="True" 
                              ShowsScrollingPlaceholders="False"
                              IsItemClickEnabled="True"
                              ScrollViewer.IsVerticalScrollChainingEnabled="False"
                              ItemsSource="{Binding}"
                              >
                        <ListView.ItemTemplate >
                            <DataTemplate >
                                <Border >
                                    <Grid Height="60" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Image x:Name="imgSongPic" Grid.Column="0" Source="{Binding Path=ImageUri}"></Image>
                                        <!--<Border Background="SlateGray" Grid.Column="0"/>-->
                                        <StackPanel x:Name="stkSongDetails" Grid.Column="1" Orientation="Vertical" >
                                            <TextBlock x:Name="txtName"  Text="{Binding Name}" FontSize="27" Margin="10,0,0,0"/>
                                            <TextBlock x:Name="txtArtist" Text="{Binding Artist}" FontSize="16" Margin="10,0,0,0" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <Border x:ConnectionId='2' Background="SlateGray"  Height="50" Width="100" HorizontalAlignment="Left" 
                                                Margin="0,20,0,20"                       >
                                            <TextBlock Text="{Binding Title}" FontSize="30"/>
                                        </Border>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                                <GroupStyle.Panel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" Margin="0 0 0 20"/>
                                    </ItemsPanelTemplate>
                                </GroupStyle.Panel>
                            </GroupStyle>
                        </ListView.GroupStyle>
                        
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsStackPanel Orientation="Vertical"  />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </SemanticZoom.ZoomedInView>

                <SemanticZoom.ZoomedOutView>
                    <ListView x:Name="lstViewSummary" Background="Black"  
                              ItemsSource="{Binding}"
                              IsZoomedInView="False" ScrollViewer.IsVerticalScrollChainingEnabled="False">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Height="70" Width="200" Background="SlateGray" Margin="10,10,10,10">
                                    <TextBlock Text="{Binding Group.Title}" FontSize="30"/>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </SemanticZoom.ZoomedOutView>

            </SemanticZoom>






        </Grid>
    </Grid>
</Page>

